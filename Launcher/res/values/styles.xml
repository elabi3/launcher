<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="@android:Theme.Material.Wallpaper">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@color/Transparent</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:navigationBarColor">@color/Transparent</item>
    </style>

    <style name="DarkTheme" parent="AppTheme">
        <item name="spaces_background_color">#AA000000</item>
        <item name="spaces_bars">#BB000000</item>
        <item name="spaces_text_color">#FFFFFFFF</item>
        <item name="drawer_spaces_background_color">#DD000000</item>
    </style>

    <style name="LightTheme" parent="AppTheme">
        <item name="spaces_background_color">#AAFFFFFF</item>
        <item name="spaces_bars">#BBFFFFFF</item>
        <item name="spaces_text_color">#FF000000</item>
        <item name="drawer_spaces_background_color">#DDFFFFFF</item>
    </style>

    <style name="SpacesText">
        <item name="android:typeface">sans</item>
        <item name="android:textColor">?attr/spaces_text_color</item>
    </style>

</resources>