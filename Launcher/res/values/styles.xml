<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="@android:Theme.Material.Wallpaper">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@color/Transparent</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:navigationBarColor">@color/Transparent</item>
    </style>

    <style name="DarkTheme" parent="AppTheme">
        <item name="spaces_background_color">#BB000000</item>
        <item name="spaces_bars">#CC07527A</item>
        <item name="spaces_text_color">#FFFFFF</item>
        <item name="drawer_spaces_background_color">#FF042A3F</item>
        <item name="spaces_button_color">#FF07527A</item>
        <item name="spaces_button_border_color">#FF042A3F</item>
        <item name="spaces_button_color_selected">#FF0D91D8</item>
        <item name="spaces_button_border_color_selected">#FF0D91D8</item>
    </style>

    <style name="LightTheme" parent="AppTheme">
        <item name="spaces_background_color">#AAFFFFFF</item>
        <item name="spaces_bars">#BBFFFFFF</item>
        <item name="spaces_text_color">#FF000000</item>
        <item name="drawer_spaces_background_color">#DDFFFFFF</item>
    </style>

    <style name="SpacesText">
        <item name="android:typeface">sans</item>
        <item name="android:textColor">?attr/spaces_text_color</item>
    </style>

</resources>